# Application Settings
APP_NAME=f1-predictor
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-here

# Cloud Provider Settings
CLOUD_PROVIDER=gcp
PROJECT_ID=your-project-id
REGION=us-central1
INSTANCE_TYPE=n1-standard-2

# Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=f1_predictor
DB_USER=postgres
DB_PASSWORD=your-db-password

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Monitoring Settings
PROMETHEUS_MULTIPROC_DIR=/tmp
GRAFANA_ADMIN_PASSWORD=admin

# Alert Settings
ALERT_EMAIL=admin@example.com
SMTP_FROM=alerts@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_SECRET=your-smtp-secret

# F1 Data API Settings
F1_API_KEY=your-f1-api-key
F1_API_BASE_URL=https://api.formula1.com/v1

# Model Settings
MODEL_TYPE=random_forest
MODEL_PARAMS={"n_estimators": 100, "max_depth": 10}
MODEL_SAVE_PATH=/app/models

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/app/logs/app.log

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
JWT_SECRET=your-jwt-secret
JWT_EXPIRATION=3600

# Backup Settings
BACKUP_BUCKET=your-backup-bucket
BACKUP_RETENTION_DAYS=7

# Feature Flags
ENABLE_AUTO_UPDATE=true
ENABLE_MODEL_TRAINING=true
ENABLE_DATA_COLLECTION=true
ENABLE_MONITORING=true

# Data Collection
DATA_UPDATE_INTERVAL=24  # hours
WEATHER_API_KEY=your_openweathermap_api_key

# Model Configuration
MODEL_UPDATE_INTERVAL=7  # days
CONFIDENCE_THRESHOLD=0.6
PERFORMANCE_THRESHOLD=0.5

# Email Notifications
NOTIFICATION_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Cloud Deployment (Optional)
CLOUD_PROVIDER=gcp  # or aws 